    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <!--<MenuItem Header="_Open..."
                          Command="{Binding FileOpenCommand}" />-->
                <MenuItem Header="打开文件..."
                          Click="MenuItemOpen_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"
                          Click="MenuItem_Click" />
            </MenuItem>
        </Menu>

        <DockPanel DockPanel.Dock="Left"
                   Visibility="Collapsed"
                   Width="400">
            <Slider Value="{Binding Expansion}"
                    Minimum="1"
                    Maximum="2"
                    DockPanel.Dock="Bottom" />
            <TextBox DockPanel.Dock="Bottom"
                     Height="200"
                     Text="{Binding Info}" />
            <TreeView ItemsSource="{Binding Elements}">
            </TreeView>
        </DockPanel>

        <!--<ScrollViewer>
            <StackPanel x:Name="rootSP"
                        Orientation="Vertical"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"></StackPanel>
        </ScrollViewer>-->
        <helix:HelixViewport3D x:Name="_Viewport3DMain"
                               CameraRotationMode="Trackball"
                               ModelUpDirection="0,1,0">
            <ModelVisual3D x:Name="root1">
                <helix:DefaultLights />
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <Model3DGroup.Children>
                                <AmbientLight Color="#101010" />
                            </Model3DGroup.Children>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                <ModelVisual3D x:Name="_Items" />
            </ModelVisual3D>
        </helix:HelixViewport3D>
    </DockPanel>
