                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8"
                             Height="8"
                             Margin="4"
                             Fill="{Binding Brush}"
                             Stroke="Black" />
                    <TextBlock Text="{Binding TypeName}"
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding Name}"
                               Padding="8 0 0 0" />
                </StackPanel>
            </StackPanel>
        </HierarchicalDataTemplate>
